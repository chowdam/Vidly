@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "CustomersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> List of Customers</h2>

@if (Model.Count() > 0)
{

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer Name</th>

                <th> View Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {

                <tr class="row">
                    <td>
                        @customer.Name

                    </td>
                    <td>

                        @Html.ActionLink("Details", "CustomerDetails", new { id = customer.Id })
                    </td>

                </tr>

            }
        </tbody>
    </table>
}
else
{
    <br />
    <br />
    <div class="table table-bordered">
       
        <h4 style="background-color: yellow; color: red; font-weight: bold">No Cutomers Found</h4>
    </div>
}