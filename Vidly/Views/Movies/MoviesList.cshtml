
@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "MoviesList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies List</h2>



<table class="table table-bordered table-hover">
    <thead>
        <tr>


            <th>Movie ID</th>
            <th> Name of the Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {

            <tr>
                <td>
                    @movie.Id
                </td>
                <td>

                    @movie.Name
                </td>

            </tr>

        }
    </tbody>
</table>